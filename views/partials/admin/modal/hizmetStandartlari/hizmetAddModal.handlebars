<div class="modal" id="hizmetAddModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hizmet Standartı Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/admin/hizmetStandartlari/create" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Hizmet Adı</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Hizmet Adı">
                    </div>
                    <div class="form-group">
                        <label for="documents">Başvuruda İstenen Belgeler</label>
                        <textarea class="form-control" id="documents" name="documents" placeholder="Başvuruda İstenen Belgeler" style="height:150px"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="duration">Hizmetin Tamamlanma Süresi</label>
                        <input type="text" class="form-control" id="duration" name="duration" placeholder="Hizmetin Tamamlanma Süresi">
                    </div>

                    <div class="form-group">
                        <label for="order">Sıra</label>
                        <input type="number" class="form-control" id="order" name="order" placeholder="Sıra">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>