<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hizmet Standartları Tablosu</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Hizmet Sıtandartları Tablosu</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#hizmetAddModal">Hizmet standartı ekle</button>
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                {{#ifCond hizmetStandartlari.length ">" 0}}
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Sıra</th>
                                <th scope="col">Hizmet Adı</th>
                                <th scope="col">Başvuruda İstenen Belgeler</th>
                                <th scope="col">Hizmetin Tamamlanma Süresi</th>
                                <th class="text-center" scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each ../hizmetStandartlari}}
                                <tr id="tr{{_id}}">
                                    <td>{{order}}</td>
                                    <td>{{name}}</td>
                                    <td style="white-space: pre-line">{{{documents}}}</td>
                                    <td>{{duration}}</td>
                                    <td>
                                        <div class="d-flex justify-content-center align-items-center mx-1">
                                            <div data-toggle="tooltip" data-placement="top" title="Düzenle">
                                                <button type="button" class="btn btn-outline-warning mx-1" data-toggle="modal" data-target="#hizmetEditModal{{_id}}"><i class="fas fa-edit"></i></button>
                                            </div>
                                            <div data-toggle="tooltip" data-placement="top" title="Sil">
                                                <button type="button" class="btn btn-outline-danger mx-1" data-toggle="modal" data-target="#hizmetRemoveModal{{_id}}"><i class="fas fa-trash-alt"></i></button>
                                            </div>
                                        </div>
                                        {{> admin/modal/hizmetStandartlari/hizmetEditModal this}}
                                        {{> admin/modal/hizmetStandartlari/hizmetRemoveModal this}}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                        <p>Hizmet Standartı Bulunmamaktadır</p>
                {{/ifCond}}
            </div>
            <!-- /.card-body -->
        </div>
    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->

{{> admin/modal/hizmetStandartlari/hizmetAddModal}}