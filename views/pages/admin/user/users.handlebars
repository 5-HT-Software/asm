<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">All Users</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item active">All Users</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="usersTable" class="table table-bordered table-hover dataTable dtr-inline" aria-describedby="example2_info">
                            <thead>
                                <tr>
                                    <th>Avatar</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Name Surname</th>
                                    <th>Authority</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                    {{#ifCond _id "!=" ../auth._id}}
                                        <tr>
                                            <td>
                                                <div class="image">
                                                    <img src="{{../avatar}}" class="img-circle elevation-2" style="height: 40px;">
                                                </div>
                                            </td>
                                            <td>{{../username}}</td>
                                            <td>{{../email}}</td>
                                            <td>{{../name}} {{../surname}}</td>
                                            <td>{{../authority}}</td>
                                            <td>
                                                <div class="d-flex justify-content-center">
                                                    <button type="button" data-password-reset-email="{{../email}}" class="btn btn-outline-warning btn-sm mr-2"><i class="fas fa-key"></i></button>
                                                    <a href="/admin/user/{{../_id}}/update" class="btn btn-outline-success btn-sm m-0">Edit</a>
                                                </div>

                                            </td>
                                        </tr>
                                    {{/ifCond}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
{{> admin/modal/user/passwordResetModal}}

{{#section "link-style"}}
    <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
{{/section}}

{{#section "link-script"}}
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/admin/dist/js/user/users.js"></script>
{{/section}}

{{#section "script"}}
    <script>
        $('#usersTable').DataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "responsive": true,
            "oLanguage": {
                "sUrl": "/datatable-tr.json"
            }
        })
    </script>
{{/section}}