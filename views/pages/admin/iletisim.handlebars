<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">İletişim</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Anasayfa</a></li>
                    <li class="breadcrumb-item active">İletişim</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <form action="/admin/iletisim/update/{{#if iletisim._id}}{{iletisim._id}}{{else}}false{{/if}}" method="post">
                    <div class="form-group mb-3">
                        <label for="map">Harita Url</label>
                        <input type="text" name="map" id="map" class="form-control" value="{{iletisim.map}}">
                    </div>
                    <div class="form-group mb-3">
                        <label for="mainAddress">Adres</label>
                        <input type="text" name="mainAddress" id="mainAddress" class="form-control" value="{{iletisim.mainAddress}}">
                    </div>
                    <div class="form-group mb-3">
                        <label for="mainPhone">Telefon</label>
                        <input type="text" name="mainPhone" id="mainPhone" class="form-control" value="{{iletisim.mainPhone}}">
                    </div>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>

        {{#if iletisim._id}}
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Diğer İletişim Bilgileri</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>İsim</th>
                                <th>Adres</th>
                                <th>Telefon Numarası</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <form action="/admin/iletisim/createOther" method="post">
                                    <td> <input type="text" name="name" class="form-control" placeholder="İsim"></td>
                                    <td><input type="text" name="address" class="form-control" placeholder="Adres"></td>
                                    <td><input type="text" name="phone" class="form-control" placeholder="Telefon Numarası"></td>
                                    <td><button type="submit" class="btn btn-success">Yeni Bilgi Ekle</button></td>
                                </form>
                            </tr>
                            {{#each iletisim.others}}
                                <tr>
                                    <form action="/admin/iletisim/updateOther/{{_id}}" method="post">
                                        <td> <input type="text" name="name" class="form-control" value="{{name}}"></td>
                                        <td><input type="text" name="address" class="form-control" value="{{address}}"></td>
                                        <td><input type="text" name="phone" class="form-control" value="{{phone}}"></td>
                                        <td>
                                            <button type="submit" class="btn btn-primary">Güncelle</button>
                                            <a href="/admin/iletisim/deleteOther/{{_id}}" class="btn btn-danger">Sil</a>
                                        </td>
                                    </form>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->

            </div>
        {{/if}}
    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->