<div class="py-5">
    <div class="container">
        <div class="card">
            <div class="card-body py-5">
                <h4 class="card-title">FAYDALI BİLGİLER</h4>
                <div class="row">
                    <div class="col-md-8 py-4">
                        {{#each blogs}}
                            <div class="mb-5">
                                {{#unless @first}}
                                    <hr>
                                {{/unless}}
                                <h5>{{title}}</h5>
                                <div>
                                    {{{contentSummary content}}} <a href="/faydali-bilgiler/{{makeLink title}}/{{_id}}">Devamını Oku</a>
                                </div>
                                <div><strong class="text-muted">Etiketler: </strong>{{#each tags}}<a href="?tag={{this}}" class="text-reset text-decoration-none">{{this}}</a>{{#unless @last}}, {{/unless}}{{/each}}</div>
                            </div>
                        {{/each}}
                    </div>
                    <div class="col-md-4 py-4">
                        <div class="w-50 m-auto py-4 px-3 position-sticky" style="top:50px">
                            <h6>Etiketler</h6>
                            <div class="py-1"><a class="text-muted text-decoration-none" href="/faydali-bilgiler">Tümünü Gör ({{blogsCount}})</a></div>
                            {{#each allTags}}
                                <div class="py-1"><a class="text-muted text-decoration-none" href="?tag={{tagName}}">{{tagName}} ({{count}})</a></div>
                            {{/each}}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>