<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <link rel="stylesheet" href="/plugins/viewerjs/viewer.css">
  {{{_sections.link-style}}}
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/plugins/quill/quill.core.css">

  {{#if auth}}
    <link rel="stylesheet" href="/plugins/quill/quill.snow.css">
    <link rel="stylesheet" href="/dist/css/adminEditor.css">
  {{/if}}
  <link href="/plugins/bootstrap-5.1.3/css/bootstrap.min.css" rel="stylesheet">
  <!-- Toastr -->
  <link rel="stylesheet" href="/plugins/toastr/toastr.min.css">


  {{{_sections.style}}}

  <title>{{siteInfo.site_name}} - {{title}}</title>
</head>

<body style="background-color: #5ebfc4; background-image: url(/dist/images/texture_bubbles.png);">
  {{>navbar}}
  {{{body}}}
  {{>footer}}


  <!-- jQuery -->
  <script src="/plugins/jquery/jquery.min.js"></script>
  <script src="/plugins/bootstrap-5.1.3/js/bootstrap.bundle.min.js"></script>
  <script src="/plugins/toastr/toastr.min.js"></script>
  <script src="/plugins/viewerjs/viewer.min.js"></script>
  {{{_sections.link-script}}}
  <script type="text/javascript">
    $(document).ready(function () {
      var url = window.location
      let navlink = document.querySelector(`.nav-link[href="${url.pathname}"]`)
      if (navlink) {
        navlink.classList.add("bg-secondary")
        navlink.classList.add("text-white")
        navlink.classList.add("rounded-3")
        navlink.classList.add("active")
      }
    });
  </script>
  {{#if auth}}
    <script src="/plugins/quill/quill.js"></script>
    <script src="/dist/js/adminEditor.js"></script>

  {{/if}}
  <script src="/dist/js/viewer.js"></script>
  <script>
    toastr.options = {
      "positionClass": "toast-bottom-right"
    }
  </script>
  {{> toastr}}
  {{{_sections.script}}}

</body>

</html>